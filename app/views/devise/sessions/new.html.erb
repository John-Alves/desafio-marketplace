<h5 class="teal-text section-title">Bem vindo! Faça seu login</h5>
<div class="section"></div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'col s12') do |f| %>
    <div class='row'>
      <div class='input-field col s12'>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>

    <div class='row'>
      <div class='input-field col s12'>
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "validate" %>
      </div>
    </div>

    <div class='row'>
      <div class="col s12">
        <%= f.submit "Login", class: 'btn waves-effect teal' %>
      </div>
    </div>
  <% end %>
</div>
<div class="custom-links text-grey text-darken-4">
  <%= link_to "Novo por aqui? Faça seu cadastro", new_registration_path(resource_name) %>
  <%= link_to "Voltar para Início", root_path %>
</div>