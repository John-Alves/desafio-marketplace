<div class="row">
  <div class="col s4 m3">
    <div class="current-page">Produtos (<%= @quantity %>)</div>
    <div class="card">
      <div class="card-header grey lighten-2">Filtros</div>
      <div class="filters">
        <p>I am a very simple card. I am good at containing small bits of information.
          I am convenient because I require little markup to use effectively.</p>
      </div>
    </div>
  </div>

  <div class="col s8 m9">
    <div class="row">
      <%= form_with(url: home_index_path, method: :get, local: true, class: 'col s12') do |form| %>
        <div class="col s12 m8">
          <%= form.text_field :query, value: params[:query], class: 'search-field', placeholder: "Digite um produto" %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col s12">
        <div class="row">
          <% @products.each do |product| %>
            <div class="col s6 m4">
              <div class="card medium">
                <div class="card-image">
                  <img src="<%= product.image %>">
                </div>
                <div class="card-content">
                  <p><%= product.name %></p>
                  <p><%= product.price %></p>
                </div>
                <div class="card-action">
                  <a href="#">This is a link</a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>