<% @products.each do |product| %>
  <div class="row">
    <div class="col s6 m4">
      <div class="card">
        <div class="card-image">
          <img src="<%= product.image %>">
        </div>
        <div class="card-content">
          <p><%= product.name %></p>
          <p><%= product.price %></p>
        </div>
        <div class="card-action">
          <a href="#">This is a link</a>
        </div>
      </div>
    </div>
  </div>
<% end %>